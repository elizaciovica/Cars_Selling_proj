    <TextField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="3" />

    <PasswordField fx:id="mailField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <Label text="Number:" GridPane.columnIndex="0" GridPane.rowIndex="4" />

    <PasswordField fx:id="phoneField" GridPane.columnIndex="1" GridPane.rowIndex="4" />

    <Label text="Role:" GridPane.columnIndex="0" GridPane.rowIndex="5" />

    <ChoiceBox fx:id="role" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="5">
